    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "/__tests__/.*\\.test.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "modulePaths": [
            "<rootDir>/src"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup.ts"
    }
